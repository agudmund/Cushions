<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cushions.MainPage"
             BackgroundColor="#1E1E1E">

    <Grid RowDefinitions="Auto, Auto, *, Auto, Auto, Auto" 
          Padding="20" 
          RowSpacing="15">

        <!-- Top Bar -->
        <HorizontalStackLayout Grid.Row="0" HorizontalOptions="End" Spacing="10">
            <Button Text="📜" FontSize="18" BackgroundColor="Transparent" TextColor="#8A7A67" Clicked="OnShowLogClicked"/>
            <Button Text="📋" FontSize="18" BackgroundColor="Transparent" TextColor="#8A7A67" Clicked="OnShowFeaturesClicked"/>
            <Button Text="⚙" FontSize="18" BackgroundColor="Transparent" TextColor="#8A7A67" Clicked="OnSettingsClicked"/>
        </HorizontalStackLayout>

        <Label Grid.Row="1" 
               Text="Upload to Trello Cushions" 
               TextColor="#E0E0E0" 
               FontSize="24" FontAttributes="Bold" 
               HorizontalTextAlignment="Center"/>

        <Frame Grid.Row="2" 
               BackgroundColor="#2A2A2A" 
               BorderColor="#6B5A47" 
               HasShadow="True"
               CornerRadius="8">
            <Label Text="Drag &amp; Drop Area" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#8A7A67"/>
        </Frame>

        <Button Grid.Row="3" 
                Text="Browse File" 
                BackgroundColor="#3A3A3A" 
                TextColor="#E0E0E0" 
                BorderColor="#6B5A47" BorderWidth="1"
                HeightRequest="45"
                Clicked="OnBrowseFileClicked"/>

        <!-- Names used here must match the C# variables exactly -->
        <Label Grid.Row="4" 
               x:Name="StatusLabel"
               Text="Drag or browse a .md/.txt file to start" 
               TextColor="#8A7A67" 
               HorizontalTextAlignment="Center"/>

        <ProgressBar Grid.Row="5" 
                     x:Name="UploadProgress" 
                     ProgressColor="#6B5A47"
                     IsVisible="False" />
    </Grid>
</ContentPage>
